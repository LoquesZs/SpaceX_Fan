
<resources>
    <style name="Theme.SpaceXFan" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnPrimarySurface">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@drawable/space_x_android_bg</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

    </style>

    <style name="Theme.SpaceXFan.SplashScreen" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>
